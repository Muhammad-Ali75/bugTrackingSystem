<center>
<h1 align="center">Create new Project</h1>
<hr>
<%= render 'shared/errors', obj: @project %>
<div class="col-md-12 w-50 p-3">
    <%= form_for(@project, :html => {class:"form-horizontal", role: "form"}) do |f| %>
        <div class="form-group">
            <div class="control-label col-md-2">
                <%= f.label :name %>
            </div>
            <div class="col-md-8">
                <%= f.text_field :name, class: "form-control", placeholder: "Name of project", autofocus: true%>
            <div>
        </div>
        <div class="form-group">
            <div class="control-label col-md-2">
                <%= f.label :description %>
            </div>
            <div class="col-md-12">
                <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Enter description of project" %>

            </div>
        </div>
<br>
        <div class="form-group">
            <div class="control-label col-md-2">
                <%= f.label :Qa, "Add Q/A" %>
            </div>
            <div class="col-md-8">
                <%= f.select :user_ids, options_from_collection_for_select(User.where(user_type: 1), :id, :name), {}, class: "multiselect rounded md-8 form-control", multiple: true %>
            <div>
        </div>
<br>


          <div class="form-group">
            <div class="control-label col-md-3">
                <%= f.label :developer, "Add Devloper" %>
            </div>
            <div class="col-md-14">
                <%= f.select :user_ids, options_from_collection_for_select(User.where(user_type: 2), :id, :name), {}, class: "multiselect rounded md-8 form-control", multiple: true %>
            <div>
        </div>
<br>
<br>


        <br>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <%= f.submit class: "btn btn-primary btn-lg"%>
            </div>
        </div>
    <%end%>    
     <div class="col-md-4 col-md-offset-4 colormatch">
      [ <%= link_to "Cancel request", root_path %> ]
    </div>
</div>
</center>