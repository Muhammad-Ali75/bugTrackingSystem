<center>
<h1 align="center">Create new Bug</h1>
<hr>
<div class="col-md-12">
    <%= form_for(@ticket, :html => {class:"form-horizontal", role: "form"}) do |f| %>
        <div class="form-group">
            <div class="control-label col-md-2">
                <%= f.label :title %>
            </div>
            <div class="col-md-8">
                <%= f.text_field :title, class: "form-control", placeholder: "Name of ticket", autofocus: true%>
            <div>
        </div>
        <div class="form-group">
            <div class="control-label col-md-2">
                <%= f.label :description %>
            </div>
            <div class="col-md-10">
                <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Enter description of bug" %>
            </div>
        </div>
        <div class="form-group">
        
        <div class="control-label col-md-2">
                <%= f.label :Type %>
            </div>
            <div class="col-md-10">
                <%= f.radio_button :category, 0 %> 
                <%= f.label :category, 'Feature', :value => 0 %>
                <%= f.radio_button :category, 1 %>
                <%= f.label :category, 'Bug', :value => 1 %>
            </div>
        </div>
        <br>
        <br>
        <div class="control-label col-md-2">
                <%= f.label :Status %>
            </div>
            <div class="col-md-10">
                <%= f.radio_button :status, 0 %> 
                <%= f.label :status, 'New', :value => 0 %>
            </div>
        </div>
         <div class="control-label col-md-2">
                <%= f.label :Deadline %>
            </div>
            <div class="col-md-10">
                <%= f.date_field :deadline, "data-provide" => 'datepicker' %>
            </div>
        </div>
        <%= f.hidden_field :project_id, value: @project %>
        <%# <%= f.hidden_field :user_id, value: current_user.id %>
        <br>
        <br>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10"> 
                <%= f.submit class: "btn btn-primary btn-lg"%>
            </div>
        </div>
    <%end%>    
     <div class="col-md-4 col-md-offset-4 colormatch">
      [ <%= link_to "Cancel request", root_path %> ]
    </div>
</div>
</center>