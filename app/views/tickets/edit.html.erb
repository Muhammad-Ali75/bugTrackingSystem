<center>
<h1 align="center">Edit Bug</h1>
<hr>
<%= render 'shared/errors', obj: @ticket %>

<div class="col-md-12 w-50 p-3"">
    <%= form_for(@ticket, :html => {class:"form-horizontal", role: "form"}) do |f| %>
    <%if current_user.user_type == "1"%>
        <div class="form-group">
            <div class="control-label col-md-2">
                <%= f.label :title %>
            </div>
            <div class="col-md-8">
                <%= f.text_field :title, class: "form-control", placeholder: "Name of ticket", autofocus: true%>
            <div>
        </div>
        <div class="form-group">
            <div class="control-label col-md-2">
                <%= f.label :description %>
            </div>
            <div class="col-md-12">
                <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Enter description of bug" %>
            </div>
        </div>
        <br>
         <div class="control-label col-md-2">
                <%= f.label :image %>
            </div>
            <div class="col-md-10">
                <%= f.file_field :image_url %> 
            </div>
            <%if @ticket.image_url.present? %>
                <div class="my-5">
                 <%= image_tag @ticket.image_url.custom.url%>
                </div>
            <%end%>
        </div>
        <br>
        <%= f.label :developer_id %>
        <%= f.select :developer_id, options_for_select(@ticket.project.users.where(user_type: "2").map { |dev| [dev.name, dev.id] }), {} %>
        <br>
        <br>
         <div class="control-label col-md-2">
                <%= f.label :Deadline %>
            </div>
            <div class="col-md-10">
                <%= f.date_field :deadline, "data-provide" => 'datepicker' %>
            </div>
        </div>
        <%end%>
        <%# <%= f.hidden_field :user_id, value: current_user.id %>
        

        <% if current_user.user_type == "2"%>
            <div class="form-group">  
                 <div class="control-label col-md-2">
                    <%= f.label :Status %>
                </div>
                <div class="col-md-10">
                    <%# <%= f.select :status, collection: [[1, 'Started'], [2, 'Completed']], label_method: :second, value_method: :first %>
                    <%= f.select :status, [['Started', 1], ['Completed', 2]] %>
                </div>
            </div>
        <%end%>
        <br>
        <br>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10"> 
                <%= f.submit class: "btn btn-primary btn-lg"%>
            </div>
        </div>
    <%end%>    
   
      
     <div class="col-md-4 col-md-offset-4 colormatch">
      [ <%= link_to "Cancel request", root_path %> ]
    </div>
</div>
</center>